<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.7mxing.core</groupId>
    <artifactId>core</artifactId>
    <version>1.1.2-SNAPSHOT</version>
    <packaging>pom</packaging>

    <properties>
        <!--Spring-->
        <spring.boot.version>1.5.6.RELEASE</spring.boot.version>
        <spring.boot.access.log>2.2.0</spring.boot.access.log>
        <!--DataSource-->
        <mybatis.spring.version>1.3.0</mybatis.spring.version>
        <mybatis.pagehelper.spring.version>1.1.3</mybatis.pagehelper.spring.version>
        <!--权限管理-->
        <shiro.version>1.4.0</shiro.version>
        <!--Google Guava 工具类-->
        <guava.version>22.0</guava.version>
        <!--Apache 工具类-->
        <commons.lang3>3.5</commons.lang3>
        <commons.io.version>2.5</commons.io.version>
        <commons.codec.version>1.10</commons.codec.version>
        <apache.compress.version>1.9</apache.compress.version>
        <!--汉字转拼音-->
        <jpinyin.version>1.1.8</jpinyin.version>
        <!--quartz scheduler-->
        <quartz.scheduler.version>2.2.1</quartz.scheduler.version>
        <!--Aliyun 文件上传-->
        <aliyun.oss.version>2.6.1</aliyun.oss.version>
        <!--joda-->
        <joda.version>2.9.9</joda.version>
        <!--HttpClient-->
        <apache.httpclient.version>4.5.3</apache.httpclient.version>

        <!--编译选项-->
        <maven.compiler.target>1.8</maven.compiler.target>
        <maven.compiler.source>1.8</maven.compiler.source>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <gitflow.maven.plugin.version>1.6.0</gitflow.maven.plugin.version>
    </properties>

    <repositories>
        <repository>
            <id>nexus</id>
            <name>Maven Group</name>
            <url>http://nexus.ops.7mxing.com/repository/maven-public/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>nexus</id>
            <name>Maven Group</name>
            <url>http://nexus.ops.7mxing.com/repository/maven-public/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>

    <distributionManagement>
        <snapshotRepository>
            <id>nexus-snapshots</id>
            <name>Project SNAPSHOTS</name>
            <url>http://nexus.ops.7mxing.com/repository/maven-snapshots/</url>
        </snapshotRepository>
        <repository>
            <id>nexus-releases</id>
            <name>Project Release</name>
            <url>http://nexus.ops.7mxing.com/repository/maven-releases/</url>
        </repository>
    </distributionManagement>



    <dependencyManagement>
        <dependencies>
            <!--Spring Boot 父项目-->
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-dependencies</artifactId>
                <version>${spring.boot.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <!--Mybatis 核心包-->
            <dependency>
                <groupId>org.mybatis.spring.boot</groupId>
                <artifactId>mybatis-spring-boot-starter</artifactId>
                <version>${mybatis.spring.version}</version>
                <exclusions>
                    <exclusion>
                        <artifactId>tomcat-jdbc</artifactId>
                        <groupId>org.apache.tomcat</groupId>
                    </exclusion>
                </exclusions>
            </dependency>
            <dependency>
                <groupId>com.github.pagehelper</groupId>
                <artifactId>pagehelper-spring-boot-starter</artifactId>
                <version>${mybatis.pagehelper.spring.version}</version>
            </dependency>

            <!--权限管理插件-->
            <dependency>
                <groupId>org.apache.shiro</groupId>
                <artifactId>shiro-core</artifactId>
                <version>${shiro.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.shiro</groupId>
                <artifactId>shiro-web</artifactId>
                <version>${shiro.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.shiro</groupId>
                <artifactId>shiro-spring</artifactId>
                <version>${shiro.version}</version>
            </dependency>

            <!--Google Guava-->
            <dependency>
                <groupId>com.google.guava</groupId>
                <artifactId>guava</artifactId>
                <version>${guava.version}</version>
            </dependency>

            <!--Apache Utils-->
            <dependency>
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-lang3</artifactId>
                <version>${commons.lang3}</version>
            </dependency>
            <dependency>
                <groupId>commons-io</groupId>
                <artifactId>commons-io</artifactId>
                <version>${commons.io.version}</version>
            </dependency>
            <dependency>
                <groupId>commons-codec</groupId>
                <artifactId>commons-codec</artifactId>
                <version>${commons.codec.version}</version>
            </dependency>
            <dependency>
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-compress</artifactId>
                <version>${apache.compress.version}</version>
            </dependency>

            <!--日志工具类-->
            <dependency>
                <groupId>net.rakugakibox.spring.boot</groupId>
                <artifactId>logback-access-spring-boot-starter</artifactId>
                <version>${spring.boot.access.log}</version>
            </dependency>

            <!--汉字转拼音-->
            <dependency>
                <groupId>com.github.stuxuhai</groupId>
                <artifactId>jpinyin</artifactId>
                <version>${jpinyin.version}</version>
            </dependency>

            <!--Quartz Scheduler-->
            <dependency>
                <groupId>org.quartz-scheduler</groupId>
                <artifactId>quartz</artifactId>
                <version>${quartz.scheduler.version}</version>
            </dependency>

            <!--Aliyun 文件上传-->
            <dependency>
                <groupId>com.aliyun.oss</groupId>
                <artifactId>aliyun-sdk-oss</artifactId>
                <version>${aliyun.oss.version}</version>
            </dependency>

            <!--Joda-->
            <dependency>
                <groupId>joda-time</groupId>
                <artifactId>joda-time</artifactId>
                <version>${joda.version}</version>
            </dependency>

            <!--HttpClient-->
            <dependency>
                <groupId>org.apache.httpcomponents</groupId>
                <artifactId>httpclient</artifactId>
                <version>${apache.httpclient.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <finalName>core</finalName>
        <plugins>
            <!--Spring Boot 打包插件-->
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>${spring.boot.version}</version>
            </plugin>

            <plugin>
                <groupId>com.amashchenko.maven.plugin</groupId>
                <artifactId>gitflow-maven-plugin</artifactId>
                <version>${gitflow.maven.plugin.version}</version>
                <configuration>
                    <installProject>true</installProject>
                    <gitFlowConfig>
                        <productionBranch>master</productionBranch>
                        <developmentBranch>master</developmentBranch>
                        <featureBranchPrefix>feature/</featureBranchPrefix>
                        <releaseBranchPrefix>release/</releaseBranchPrefix>
                        <hotfixBranchPrefix>hotfix/</hotfixBranchPrefix>
                        <supportBranchPrefix>support/</supportBranchPrefix>
                        <versionTagPrefix>${project.artifactId}-RELEASE</versionTagPrefix>
                        <origin>origin</origin>
                    </gitFlowConfig>
                    <commitMessages>
                        <featureStartMessage>update versions for feature branch in ${project.artifactId}</featureStartMessage>
                        <featureFinishMessage>update versions for development branch in ${project.artifactId}</featureFinishMessage>

                        <hotfixStartMessage>update versions for hotfix in ${project.artifactId}</hotfixStartMessage>
                        <hotfixFinishMessage>update for next development version in ${project.artifactId}</hotfixFinishMessage>

                        <releaseStartMessage>update versions for release in ${project.artifactId}</releaseStartMessage>
                        <releaseFinishMessage>update for next development version in ${project.artifactId}</releaseFinishMessage>

                        <tagHotfixMessage>tag hotfix in ${project.artifactId}</tagHotfixMessage>
                        <tagReleaseMessage>tag release in ${project.artifactId}</tagReleaseMessage>
                    </commitMessages>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>